global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - "{{ inventory_hostname }}:9100" # Monitoring server
          {% for host in mariadb_node_ips %}
          - "{{ hostvars[host]['ansible_host'] }}:9100" # MariaDB nodes
          {% endfor %}